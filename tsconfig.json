{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "lib": ["es6", "dom", "es2019"],
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
